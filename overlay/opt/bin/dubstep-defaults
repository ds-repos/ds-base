#!/bin/sh

# TERMINAL.APP
defaults write Terminal BoldTerminalFont JetBrainsMonoNLNFM-Bold
defaults write Terminal BoldTerminalFontSize 16
defaults write Terminal TerminalFont JetBrainsMonoNLNFM-Medium
defaults write Terminal TerminalFontSize 16

# WINDOW MANAGEMENT
# defaults write NSGlobalDomain GSBackHandlesWindowDecorations 0
# defaults write NSGlobalDomain GSBackUsesNativeTaskbar 0

# GLOBAL SETTINGS
defaults write NSGlobalDomain GSSuppressAppIcon 1
defaults write NSGlobalDomain GSTheme DubstepDark
defaults write NSGlobalDomain NSBackUsesNativeTaskbar 1
defaults write NSGlobalDomain NSInterfaceStyleDefault NSMacintoshInterfaceStyle
defaults write NSGlobalDomain UseWindowMakerIcons 0

# GLOBAL FONT SETTINGS
defaults write NSGlobalDomain NSBoldFont SFPRODisplay-Bold 
defaults write NSGlobalDomain NSBoldFontSize 12.0
##
defaults write NSGlobalDomain NSControlContentFont SFPRODisplay-Regular 
defaults write NSGlobalDomain NSControlContentFontSize 12.0
##
defaults write NSGlobalDomain NSFont SFPRO_510wght
defaults write NSGlobalDomain NSFontSize 12.0
##
defaults write NSGlobalDomain NSLabelFont SFPRO_590wght
defaults write NSGlobalDomain NSLabelFontSize 12.0
##
defaults write NSGlobalDomain NSMenuFont SFPRO_590wght
defaults write NSGlobalDomain NSMenuFontSize 14.0
##
defaults write NSGlobalDomain NSMessageFont SFPRODisplay-Regular 
defaults write NSGlobalDomain NSMessageFontSize 12.0
##
defaults write NSGlobalDomain NSPaletteFont SFPRODisplay-Regular 
defaults write NSGlobalDomain NSPaletteFontSize 12.0
##
defaults write NSGlobalDomain NSTitleBarFont SFPRODisplay-Bold 
defaults write NSGlobalDomain NSTitleBarFontSize 12.0
##
defaults write NSGlobalDomain NSToolTipsFont SFPRODisplay-Regular 
defaults write NSGlobalDomain NSToolTipsFontSize 12.0
##
defaults write NSGlobalDomain NSUserFixedPitchFont JetBrainsMonoNLNFM-Medium
defaults write NSGlobalDomain NSUserFixedPitchFontSize 12.0
##
defaults write NSGlobalDomain NSUserFont SFProDisplay-Regular 
defaults write NSGlobalDomain NSUserFontSize 12.0

# GWorkspace
defaults write GWorkspace imagepath /System/Library/Desktop\ Pictures/

# ProjectCenter
ProjectCenter UseTearOffWindows NO
ProjectCenter EditorForegroundColor 'RGB 1.0 1.0 1.0'
ProjectCenter EditorBackgroundColor 'RGB 0.1 0.1 0.1'
